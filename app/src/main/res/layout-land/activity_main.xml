<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="by.bstu.fit.oleggutsev.lab2and3android.MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textSize="45sp"
                android:focusedByDefault="true"
                android:background="@android:color/white"
                android:maxLength="12"
                android:textColorHint="@color/colorTextViewText"
                android:textColor="@color/colorBlack"
                android:gravity="right|center"
                android:id="@+id/editText"
                tools:text="223322222222"/>
        <TextView
                android:gravity="right|top"
                android:padding="10dp"
                android:textColor="@color/colorTextViewText"
                android:textSize="35sp"
                android:maxLength="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                tools:text="2222"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal">
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorNumber"
                android:weightSum="4">
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4">
                <Button
                        android:text="@string/seven_number"
                        style="@style/NumberButton_style"
                        android:id="@+id/button7"
                        android:layout_weight="6"/>

                <Button
                        android:text="@string/eight_number"
                        style="@style/NumberButton_style"
                        android:id="@+id/button8"/>
                <Button
                        android:text="@string/nine_number"
                        style="@style/NumberButton_style"
                        android:id="@+id/button9"/>
            </TableRow>
            <TableRow android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1">
                <Button
                        android:text="@string/four_number"
                        style="@style/NumberButton_style"
                        android:id="@+id/button4"/>
                <Button
                        android:text="@string/five_number"
                        style="@style/NumberButton_style"
                        android:id="@+id/button5"/>
                <Button
                        android:text="@string/six_number"
                        style="@style/NumberButton_style"
                        android:id="@+id/button6"/>
            </TableRow>
            <TableRow android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1">
                <Button
                        android:text="@string/one_number"
                        style="@style/NumberButton_style"
                        android:id="@+id/button1"/>
                <Button
                        android:text="@string/two_number"
                        style="@style/NumberButton_style"
                        android:id="@+id/button2"/>
                <Button
                        android:text="@string/three_number"
                        style="@style/NumberButton_style"
                        android:id="@+id/button3"/>
            </TableRow>
            <TableRow android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1">
                <Button
                        android:text="@string/dot_number"
                        style="@style/NumberButton_style"
                        android:id="@+id/button12"/>
                <Button
                        android:text="@string/nol_number"
                        style="@style/NumberButton_style"
                        android:id="@+id/button10"/>
                <Button
                        android:text="@string/equal_number"
                        style="@style/NumberButton_style"
                        android:id="@+id/button11"/>
            </TableRow>
        </TableLayout>
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAddOperation">

            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <Button
                        android:layout_height="60dp"
                        android:text="@string/sin_operation"
                        style="@style/AddOperation_style"
                        android:id="@+id/buttonSin"/>
                <Button
                        android:layout_height="60dp"
                        android:text="@string/cos_operation"
                        android:id="@+id/buttonCos"
                        style="@style/AddOperation_style"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button android:layout_height="60dp"
                        android:text="@string/tan_operation"
                        style="@style/AddOperation_style"
                        android:id="@+id/buttonTan"/>
                <Button android:layout_height="60dp"
                        android:text="@string/pi_operation"
                        android:id="@+id/buttonPi"
                        style="@style/AddOperation_style"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button android:layout_height="60dp"
                        android:text="@string/power_operation"
                        style="@style/AddOperation_style"
                        android:id="@+id/buttonPower"/>
                <Button android:layout_height="60dp"
                        android:text="@string/root_operation"
                        android:id="@+id/buttonRoot"
                        style="@style/AddOperation_style"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView3"
                        android:visibility="invisible"/>
            </TableRow>
        </TableLayout>
        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorOperation">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button android:layout_height="65dp"
                        android:text="@string/plus_operation"
                        style="@style/OperationButton_style"
                        android:id="@+id/buttonPlus"/>
                <Button android:layout_height="65dp"
                        android:text="@string/minus_operation"
                        style="@style/OperationButton_style"
                        android:id="@+id/buttonMinus"/>
                <TextView
                        android:text="TextView123444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView2"
                        android:visibility="invisible"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button android:layout_height="65dp"
                        android:text="@string/multiply_operation"
                        style="@style/OperationButton_style"
                        android:id="@+id/buttonMultiply"/>
                <Button android:layout_height="65dp"
                        android:text="@string/divide_operation"
                        style="@style/OperationButton_style"
                        android:id="@+id/buttonDivide"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button android:layout_height="65dp"
                        android:paddingBottom="15dp"
                        android:text="@string/del_operation"
                        style="@style/OperationButton_style"
                        android:id="@+id/buttonDel"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>


</LinearLayout>
